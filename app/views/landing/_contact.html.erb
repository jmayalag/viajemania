<% content_for :javascript do %>
    <!--<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCY4SBhYmg67mC6-e8P6XXzRYLSUCbbI40&sensor=false"></script>-->

    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCY4SBhYmg67mC6-e8P6XXzRYLSUCbbI40">
    </script>
    <script type="text/javascript">
        function initialize() {
            var mapOptions = {
                // How zoomed in you want the map to start at (always required)
                zoom: 15,

                // The latitude and longitude to center the map (always required)
                center: new google.maps.LatLng(-25.321859, -57.576613),

                // Disables the default Google Maps UI components
                disableDefaultUI: false,
                scrollwheel: false,
                draggable: true
            };
            var map = new google.maps.Map(document.getElementById('map'),
                    mapOptions);

//            var image = '<%= asset_path '04_ICON_direccion.png' %>'

            var marker = new google.maps.Marker({
                position: new google.maps.LatLng(-25.321859, -57.576613),
                map: map,
                title: 'Hello World!',
//                icon: image
            });
        }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
<% end %>
