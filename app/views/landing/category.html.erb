<%= render 'landing/slider' %>

<!-- Category Section -->
<section id="packages-<%= @category.slug %>" class="content-section">
  <div class="package-section-altern" %>">
    <div class="container">
      <div class="col-lg-12 text-center">
        <h1 class="package-title"><%= @category.nombre %></h1>
        <div class="row">
          <% if @category.destinations.empty? %>
            <%= image_tag "http://placehold.it/600x500" %>
          <% end %>
          <%# calculate_offset(category.front_destinations.count) %>
          <%= render @category.destinations %>
        </div>
      </div>
      <%# content_tag :h4, link_to("Ver otros paquetes...", landing_category_path(category), class: "package-link pull-right") %>
    </div>
  </div>
</section>