<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Nombre", :nombre %></th>
			<th><%= casein_sort_link "Descripcion", :descripcion %></th>
			<th><%= casein_sort_link "Link", :link %></th>
			<th><%= casein_sort_link "Costo", :costo %></th>
			<th><%= casein_sort_link "Imagen", :imagen %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% destinations.each do |destination| %>
		<tr>
			<td><%= casein_table_cell_link destination.nombre, casein_destination_path(destination) %></td>
			<td><%= casein_table_cell_link destination.descripcion, casein_destination_path(destination) %></td>
			<td><%= casein_table_cell_link destination.link, casein_destination_path(destination) %></td>
			<td><%= casein_table_cell_link destination.costo, casein_destination_path(destination) %></td>
			<td><%= casein_table_cell_link destination.imagen, casein_destination_path(destination) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_destination_path(destination), :method => :delete, :data => { :confirm => "Esta seguro que quiere elminar este destino?" }) %>
			</td>
		</tr>
	<% end %>
</table>