<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Nombre", :nombre %></th>
			<th><%= casein_sort_link "Imagen", :imagen %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% slides.each do |slide| %>
		<tr>
			<td><%= casein_table_cell_link slide.nombre, casein_slide_path(slide) %></td>
			<td><%= casein_table_cell_link slide.imagen, casein_slide_path(slide) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_slide_path(slide), :method => :delete, :data => { :confirm => "Are you sure you want to delete this slide?" }) %>
			</td>
		</tr>
	<% end %>
</table>